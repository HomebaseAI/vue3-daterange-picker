{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "build",
    "declaration": true,
    "useDefineForClassFields": true,
    "removeComments": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "declarationDir": "./typings",
    "strict": true,
    "preserveConstEnums": true,
    "jsx": "preserve",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "typings"
  ]
}